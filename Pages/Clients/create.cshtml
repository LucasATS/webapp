@page
@model webapp.Pages.Clients.create
@{
}
<br />
<h2> Criar Clientes </h2>
@if(Model.errorMessage.Length>0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong> @Model.errorMessage</strong>
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close">Fechar</button>
    </div> 
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.cliente.Name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">E-mail</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.cliente.email" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.cliente.phone" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Endereço</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="adress" value="@Model.cliente.adress" />
        </div>
    </div>  

    @if (Model.sucessMessage.Length > 0)
    {
        <div class="row mb-3"> 
            <div class="col-sm-9">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong> @Model.sucessMessage</strong>
                    <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close">Fechar</button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancela</a>
        </div>
    </div>
</form>